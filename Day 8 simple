#include <iostream>
using namespace std;

int main() {
    int t;
    cin>>t;
    for(int i=1;i<=t;i++)
    {
        int x, y;
        cin>>x;
        cin>>y;
        y*=2;
        if(y>x)
        {
        cout<<0<<endl;
        }
        else 
        {
        cout<<x/y<<endl;
        }
        
       
       
    
    }

	return 0;
}
